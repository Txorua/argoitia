/**
 * Revolution Slider
 */
div.slider-container,
div.slider-container>div.slider>div.tp-bannertimer {
  margin-left:-20px;
  margin-right:-20px;
  padding-left:20px;
  padding-right:20px;
}
div.slider-container{background:#666;height:500px; max-height:500px;overflow:hidden;padding:0;position:relative;}
div.slider-container ul{list-style:none;margin:0;padding:0;}
div.slider{height:500px;max-height:450px;position:relative;}
div.slider div.tp-bannertimer{background-color:#CCC;background-position:0 -13px;top:0;height:7px;}
div.slider-container{background:#171717;}
div.slider-container div.caption{filter:alpha(opacity=0);opacity:0;}
div.slider-container div.top-label{
	color: #FFF;
	font-size: 36px;
	font-weight: 300;
}
div.slider-container div.main-label{
	color: #FFF;
	font-size: 36px;
	font-weight: 800;
	text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.35);
}
div.slider-container div.bottom-label{
	color: #FFF;
	font-size: 20px;
	font-weight: 300;
}
div.slider-container div.caption a,div.slider-container div.caption a:hover{color:#FFF;}

/* RESPONSIVE CSS
-------------------------------------------------- */

@media (min-width: 1024px) {

  /* Remove the edge padding needed for mobile */
  .marketing {
    padding-right: 0;
    padding-left: 0;
  }

  /* Navbar positioning foo */
  .navbar-wrapper {
    margin-top: 20px;
  }
  .navbar-wrapper .container {
    padding-right: 15px;
    padding-left:  15px;
  }
  .navbar-wrapper .navbar {
    padding-right: 15px; /*0;*/
    padding-left:  15px; /*0;*/
  }

  /* The navbar becomes detached from the top, so we round the corners */
  .navbar-wrapper .navbar {
    border-radius: 4px;
  }

  .navbar-wrapper .navbar.navbar-inverse {
    /*background-color: rgba(0, 0, 0, 0.2);*/
    background-color: rgba(0, 0, 0, 0);
    border-color: rgba(0, 0, 0, 0);
  }

  .navbar-wrapper .navbar-header, 
  .navbar-wrapper .navbar-collapse {
    background-color: rgba(0, 0, 0, 0.4);
    border-radius: 4px;
    border: solid 1px #666;
  }

  .navbar-wrapper .pull-left {
    float: right !important;
  }

  /* Bump up size of carousel content */
  .carousel-caption p {
    margin-bottom: 20px;
    font-size: 21px;
    line-height: 1.4;
  }

  .featurette-heading {
    font-size: 50px;
  }
}

@media (min-width: 992px) {
  .featurette-heading {
    margin-top: 120px;
  }
}

